<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:viewBindingIgnore="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.UrlConnectionActivity">

    <TextView
        android:id="@+id/tv_urlconnection_get"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:gravity="center"
        android:text="URLConnection get"
        android:onClick="onClick"/>

    <TextView
        android:id="@+id/tv_urlconnection_post"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_urlconnection_get"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:gravity="center"
        android:text="URLConnection post"
        android:onClick="onClick"/>

    <TextView
        android:id="@+id/tv_urlconnection_get_image"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_urlconnection_post"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:gravity="center"
        android:text="URLConnection get image"
        android:onClick="onClick"/>

    <ImageView
        android:id="@+id/iv_demo3"
        android:layout_width="75dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="3:4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_urlconnection_get_image"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"/>

    <View
        android:id="@+id/divider3"
        android:layout_width="0dp"
        android:layout_height="1px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_urlconnection_get_image"
        android:layout_marginHorizontal="20dp"
        android:background="@android:color/black"/>
</androidx.constraintlayout.widget.ConstraintLayout>
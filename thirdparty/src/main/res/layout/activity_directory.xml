<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.DirectoryActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_root_dir"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:onClick="onClick"
        android:text="Environment#getRootDirectory"/>

    <TextView
        android:id="@+id/tv_data_dir"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_root_dir"
        android:gravity="center"
        android:onClick="onClick"
        android:text="Environment#getDataDirectory"/>

    <TextView
        android:id="@+id/tv_download_cache_dir"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_data_dir"
        android:gravity="center"
        android:onClick="onClick"
        android:text="Environment#getDownloadCacheDirectory"/>

    <TextView
        android:id="@+id/tv_external_storage_dir"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_download_cache_dir"
        android:gravity="center"
        android:onClick="onClick"
        android:text="Environment#getExternalStorageDirectory"/>

    <TextView
        android:id="@+id/tv_external_storage_public_dir"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_external_storage_dir"
        android:gravity="center"
        android:onClick="onClick"
        android:text="Environment#getExternalStoragePublicDirectory"/>

    <TextView
        android:id="@+id/tv_external_cache_dir"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_external_storage_public_dir"
        android:gravity="center"
        android:onClick="onClick"
        android:text="Context#getExternalCacheDir"/>

    <TextView
        android:id="@+id/tv_external_files_dir"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_external_cache_dir"
        android:gravity="center"
        android:onClick="onClick"
        android:text="Context#getExternalFilesDir"/>

    <TextView
        android:id="@+id/tv_app_data_dir"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_external_files_dir"
        android:gravity="center"
        android:onClick="onClick"
        android:text="Context#getDataDir"/>

    <TextView
        android:id="@+id/tv_cache_dir"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_app_data_dir"
        android:gravity="center"
        android:onClick="onClick"
        android:text="Context#getCacheDir"/>

    <TextView
        android:id="@+id/tv_files_dir"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_cache_dir"
        android:gravity="center"
        android:onClick="onClick"
        android:text="Context#getFilesDir"/>

    <TextView
        android:id="@+id/tv_app_dir"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_files_dir"
        android:gravity="center"
        android:onClick="onClick"
        android:text="Context#getDir"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_android_id"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_app_dir"
        android:gravity="center"
        android:onClick="onClick"
        android:text="getDeviceId"/>
</androidx.constraintlayout.widget.ConstraintLayout>
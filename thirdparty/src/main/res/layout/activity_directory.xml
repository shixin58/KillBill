<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_dir1"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:onClick="onClick"
        android:text="Environment#getRootDirectory"/>

    <TextView
        android:id="@+id/tv_dir2"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_dir1"
        android:gravity="center"
        android:onClick="onClick"
        android:text="Environment#getDataDirectory"/>

    <TextView
        android:id="@+id/tv_dir3"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_dir2"
        android:gravity="center"
        android:onClick="onClick"
        android:text="Environment#getDownloadCacheDirectory"/>

    <TextView
        android:id="@+id/tv_dir4"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_dir3"
        android:gravity="center"
        android:onClick="onClick"
        android:text="Environment#getExternalStorageDirectory"/>

    <TextView
        android:id="@+id/tv_dir5"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_dir4"
        android:gravity="center"
        android:onClick="onClick"
        android:text="Environment#getExternalStoragePublicDirectory"/>

    <TextView
        android:id="@+id/tv_dir6"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_dir5"
        android:gravity="center"
        android:onClick="onClick"
        android:text="Context#getExternalCacheDir"/>

    <TextView
        android:id="@+id/tv_dir7"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_dir6"
        android:gravity="center"
        android:onClick="onClick"
        android:text="Context#getExternalFilesDir"/>

    <TextView
        android:id="@+id/tv_dir8"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_dir7"
        android:gravity="center"
        android:onClick="onClick"
        android:text="Context#getCacheDir"/>

    <TextView
        android:id="@+id/tv_dir9"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_dir8"
        android:gravity="center"
        android:onClick="onClick"
        android:text="Context#getFilesDir"/>

    <TextView
        android:id="@+id/tv_dir10"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_dir9"
        android:gravity="center"
        android:onClick="onClick"
        android:text="Context#getDir"/>
</androidx.constraintlayout.widget.ConstraintLayout>
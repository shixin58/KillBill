<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.video.activity.VideoViewActivity">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="4:3"/>

    <TextView
        android:id="@+id/tv_consumed"
        android:layout_width="60dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="@id/videoView"
        app:layout_constraintBottom_toBottomOf="@id/videoView"
        android:background="#1FFFFFFF"
        android:gravity="center"
        tools:text="00:00"/>

    <TextView
        android:id="@+id/tv_remained"
        android:layout_width="60dp"
        android:layout_height="40dp"
        app:layout_constraintRight_toRightOf="@id/videoView"
        app:layout_constraintBottom_toBottomOf="@id/videoView"
        android:background="#1FFFFFFF"
        android:gravity="center"
        tools:text="05:00"/>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toRightOf="@id/tv_consumed"
        app:layout_constraintRight_toLeftOf="@id/tv_remained"
        app:layout_constraintBottom_toBottomOf="@id/videoView"/>

    <ToggleButton
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/videoView"
        android:onClick="onClick"
        android:textOff="paused"
        android:textOn="started"/>

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/videoView"
        app:layout_constraintRight_toRightOf="@id/videoView"
        app:layout_constraintTop_toTopOf="@id/videoView"
        app:layout_constraintBottom_toBottomOf="@id/videoView"
        tools:visibility="visible"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_countdown"
        android:layout_width="60dp"
        android:layout_height="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_start"
        app:layout_constraintBottom_toBottomOf="@id/btn_start"
        android:onClick="onClick"
        android:gravity="center"
        android:text="60"/>
</androidx.constraintlayout.widget.ConstraintLayout>
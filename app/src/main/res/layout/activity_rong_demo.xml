<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edit_from_userId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="20dp"
        android:hint="from userid"/>

    <EditText
        android:id="@+id/edit_to_userId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_from_userId"
        android:paddingLeft="20dp"
        android:hint="to userid"/>

    <TextView
        android:id="@+id/tv_rong_connect"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_to_userId"
        android:gravity="center"
        android:text="rong connect"
        android:onClick="onClick"/>

    <TextView
        android:id="@+id/tv_open_conversation_list"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_rong_connect"
        android:gravity="center"
        android:text="open conversation list"
        android:onClick="onClick"/>

    <TextView
        android:id="@+id/tv_open_conversation"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_open_conversation_list"
        android:gravity="center"
        android:text="open conversation"
        android:onClick="onClick"/>

    <TextView
        android:id="@+id/tv_disconnect"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_open_conversation"
        android:gravity="center"
        android:text="disconnect"
        android:onClick="onClick"/>

    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_disconnect"
        android:gravity="center"
        android:text="logout"
        android:onClick="onClick"/>
</androidx.constraintlayout.widget.ConstraintLayout>